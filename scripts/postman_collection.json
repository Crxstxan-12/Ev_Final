{
  "info": {
    "name": "Proyecto Libros API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "00000000-0000-0000-0000-000000000000"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8000" },
    { "key": "username", "value": "" },
    { "key": "password", "value": "" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" },
    { "key": "libroId", "value": "" },
    { "key": "trabajadorId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (obtain token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/token/", "host": ["{{baseUrl}}"], "path": ["api", "token", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "pm.environment.set('accessToken', data.access);",
                  "pm.environment.set('refreshToken', data.refresh);"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh token",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/token/refresh/", "host": ["{{baseUrl}}"], "path": ["api", "token", "refresh", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refreshToken}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "pm.environment.set('accessToken', data.access);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Libros",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const tok = pm.environment.get('accessToken');",
              "if (tok) { pm.request.headers.upsert({ key: 'Authorization', value: 'Bearer ' + tok }); }"
            ]
          }
        }
      ],
      "item": [
        {
          "name": "Listar libros",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/libros/", "host": ["{{baseUrl}}"], "path": ["api", "libros", ""] }
          }
        },
        {
          "name": "Buscar libros (q)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/libros/?q={{q}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "libros", ""],
              "query": [ { "key": "q", "value": "{{q}}" } ]
            }
          }
        },
        {
          "name": "Crear libro",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/libros/", "host": ["{{baseUrl}}"], "path": ["api", "libros", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"El Quijote\",\n  \"autor\": \"Miguel de Cervantes\",\n  \"anio_publicacion\": 1605,\n  \"categoria\": \"Novela\",\n  \"disponible\": true\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "pm.environment.set('libroId', data.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Detalle libro",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/libros/{{libroId}}/", "host": ["{{baseUrl}}"], "path": ["api", "libros", "{{libroId}}", ""] }
          }
        },
        {
          "name": "Actualizar libro",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/libros/{{libroId}}/", "host": ["{{baseUrl}}"], "path": ["api", "libros", "{{libroId}}", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"El Quijote (Edición Revisada)\",\n  \"autor\": \"Miguel de Cervantes\",\n  \"anio_publicacion\": 1605,\n  \"categoria\": \"Novela\",\n  \"disponible\": true\n}"
            }
          }
        },
        {
          "name": "Eliminar libro",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/libros/{{libroId}}/", "host": ["{{baseUrl}}"], "path": ["api", "libros", "{{libroId}}", ""] }
          }
        }
      ]
    },
    {
      "name": "Trabajadores",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const tok = pm.environment.get('accessToken');",
              "if (tok) { pm.request.headers.upsert({ key: 'Authorization', value: 'Bearer ' + tok }); }"
            ]
          }
        }
      ],
      "item": [
        {
          "name": "Listar trabajadores",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/trabajadores/", "host": ["{{baseUrl}}"], "path": ["api", "trabajadores", ""] }
          }
        },
        {
          "name": "Crear trabajador",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/trabajadores/", "host": ["{{baseUrl}}"], "path": ["api", "trabajadores", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"correo\": \"juan.perez@example.com\",\n  \"cargo\": \"Operario\",\n  \"fecha_contratacion\": \"2024-01-15\",\n  \"activo\": true\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "pm.environment.set('trabajadorId', data.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Detalle trabajador",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/trabajadores/{{trabajadorId}}/", "host": ["{{baseUrl}}"], "path": ["api", "trabajadores", "{{trabajadorId}}", ""] }
          }
        },
        {
          "name": "Actualizar trabajador",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/trabajadores/{{trabajadorId}}/", "host": ["{{baseUrl}}"], "path": ["api", "trabajadores", "{{trabajadorId}}", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"correo\": \"juan.perez@example.com\",\n  \"cargo\": \"Supervisor\",\n  \"fecha_contratacion\": \"2024-01-15\",\n  \"activo\": true\n}"
            }
          }
        },
        {
          "name": "Eliminar trabajador",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/trabajadores/{{trabajadorId}}/", "host": ["{{baseUrl}}"], "path": ["api", "trabajadores", "{{trabajadorId}}", ""] }
          }
        }
      ]
    }
  ]
}
